<div class="form-group">
    <div class="form-input">
        <input type="text" ng-model="text" ng-attr-maxlength="{{maxlength}}"/>
        <span
            class="freetype--error freetype--error-text"
            ng-show="necessaryFlag"
            hide-render
            translate>Required</span>
        <span
            class="freetype--error freetype--error-text"
            ng-show="compulsoryFlag"
            hide-render
            translate>One of these is needed!</span>
        <span
            class="freetype--error freetype--error-text"
            ng-show="tandemFlag"
            hide-render
            translate>Required</span>
        <span
            class="freetype--error freetype--error-text"
            ng-show="numberFlag"
            hide-render
            translate>Needs to be number!</span>
        <span
            class="freetype--error freetype--error-text"
            ng-show="orderFlag"
            hide-render
            translate>Needs to be in order!</span>
    </div>
</div>

